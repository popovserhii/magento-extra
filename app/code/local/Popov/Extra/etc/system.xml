<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs><!-- this must be in every system.xml -->
		<popov module="popov_extra" translate="label"><!-- general tab name -->
			<label>Popov's Modules</label><!-- general tab label in left panel -->
			<sort_order>10000</sort_order>
		</popov>
	</tabs>

    <sections>
          <popov_extra translate="label" module="popov_extra">
            <label>Extra Info</label><!-- sub tab label of general tab -->
            <tab>popov</tab><!-- name of general tab name. See <tabs/> section above -->
            <frontend_type>text</frontend_type>
            <sort_order>220</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <extra translate="label"><!-- name of group options in right panel. This name use in config.xml for default value -->
                    <label>General</label><!-- general label of group options in right panel -->
	                <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <show_sku_on_product_page translate="label">
                            <label>Show SKU on product page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_sku_on_product_page>
                    </fields>
                </extra>
            </groups>
        </popov_extra>
    </sections>
</config>